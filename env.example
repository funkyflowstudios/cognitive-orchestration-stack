# Environment template for Cognitive Orchestration Stack
# Rename this file to `.env` after copying and fill in real values

# Neo4j connection
NEO4J_URI=bolt://localhost:7687  # URI of your Neo4j instance
NEO4J_USER=neo4j                # Neo4j username
NEO4J_PASSWORD=<YOUR_PASSWORD>  # Neo4j password (set strong password!, do NOT commit)

# Ollama inference server
OLLAMA_HOST=http://localhost:11434  # Base URL for Ollama server
OLLAMA_MODEL=llama3                # Default model name
# Embedding model for vector search
OLLAMA_EMBEDDING_MODEL=llama2-embed

# Logging
LOG_LEVEL=INFO  # Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
