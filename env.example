# Environment template for Cognitive Orchestration Stack
# Rename this file to `.env` after copying and fill in real values

# Neo4j connection
NEO4J_URI=bolt://localhost:7687  # URI of your Neo4j instance
NEO4J_USER=neo4j                # Neo4j username
NEO4J_PASSWORD=<YOUR_PASSWORD>  # Neo4j password (set strong password!, do NOT commit)

# Ollama inference server
OLLAMA_HOST=http://localhost:11434  # Base URL for Ollama server
OLLAMA_MODEL=llama3                # Default model name
# Embedding model for vector search
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Search API Configuration (Optional - for real search results)
# SerpAPI (Primary - multiple search engines, language filtering)
# Get API key from: https://serpapi.com/
# Free tier: 100 searches per month, then $50/month
SERPAPI_KEY=your_serpapi_key_here

# Brave Search API (Secondary - privacy-focused)
# Get API key from: https://brave.com/search/api/
# Free tier: 2,000 searches per month
BRAVE_API_KEY=your_brave_api_key_here

# Google Custom Search API (Alternative - requires Google Cloud setup)
# Get API key from: https://console.developers.google.com/
# Get CSE ID from: https://cse.google.com/cse/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# DuckDuckGo Language Settings (for fallback search)
DUCKDUCKGO_LANGUAGE=us-en
DUCKDUCKGO_REGION=us

# Logging
LOG_LEVEL=INFO  # Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
